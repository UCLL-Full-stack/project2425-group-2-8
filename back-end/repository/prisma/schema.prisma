generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  password     String
  role         String
  profile      Profile?  @relation
  stats        Stats[]
  workouts     Workout[] @relation("UserWorkouts")
}

model Stats {
  id           Int       @id @default(autoincrement())
  weight       Float
  length       Float
  pr           Float
  date         DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
}

model Workout {
  id           Int       @id @default(autoincrement())
  subject      String
  date         DateTime
  user         User      @relation(fields: [userId], references: [id], name: "UserWorkouts")
  userId       Int[]
}

model Profile {
  id           Int       @id @default(autoincrement())
  firstName    String
  name         String
  dateOfBirth  DateTime
  user         User      @relation(fields: [userId], references: [id])
  userId       Int       @unique
}

